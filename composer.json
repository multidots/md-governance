{
	"name": "multidots/md-governance",
	"require-dev": {
		"composer/composer": "^2.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.4.1 || ^0.5 || ^0.6.2 || ^0.7 || ^1.0.0",
		"automattic/vipwpcs": "^3.0"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"set_default": "phpcs --config-set default_standard WordPressVIPMinimum,WordPress-VIP-Go",
		"phpcs_i": "phpcs -i",
		"phpcs": "phpcs --standard=./phpcs.xml *",
		"phpcbf": "phpcbf --standard=./phpcbf.xml *"
	}
}
